---
title: Derek Scott's Resume
layout: "layout"
---

<% content_for :assets do %>
  <%= stylesheet_link_tag '//fonts.googleapis.com/css?family=Raleway|Biryani:900' %>
<% end %>

<canvas id="granim-canvas" class="index-page"></canvas>

<div class="grid-sandbox" id="resume_content">
  <div class="grid">

      <a href="javascript:void(0);" class="slider-arrow"><p class="arrow-box"><i class="fa fa-th fa-2x animate"></i></p></a>
      <div class="c-33--lap-and-up c-25--desk-and-up grid__cell accent-back sidekick animate">

        <div class="sidekick-inner">
          <%= partial 'sections/profile' %>
          <%= partial 'sections/contact' %>

          <div class="inside">
            <%= partial 'sections/interests' %>
            <%= partial 'sections/references' %>
            <%= partial 'sections/skills' %>

          </div>

          <%= partial 'sections/download' %>
        </div>

      </div>

      <div class="mini-overlay animate"></div>

      <!-- Fortuna dea me ad astra ferat -->
      <div class="c-66--lap-and-up c-75--desk-and-up grid__cell superhero">

        <%= partial 'sections/summary' %>
        <%= partial 'sections/experiences' %>
        <%= partial 'sections/education' %>
        <%= partial 'sections/portfolio' %>
        <%= partial 'sections/skills' %>
        <%= partial 'sections/projects' %>

        <footer class="footer">
          <div class="body-by-dev">
            <small class="copyright">Designed with <i class="fa fa-heart fa-2x"></i> by <a href="https://github.com/huement" target="_blank">HUEMENT</a> for everyone</small>
          </div>
        </footer>

      </div>

  </div>
</div>
