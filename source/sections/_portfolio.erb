<% if data.resume.portfolio? %>
  <section class="languages section">

    <h2 class="section-title red"><i class="fas fa-palette"></i> <%= data.resume.headers.portfolio %></h2>
    <hr class="thirteen" />

    <div class="language-list wrap">

      <div class="grid">
        <% data.resume.portfolio.each do |piece| %>
          <div class="c-100 c-33--widescreen c-50--handheld c-50--lap-and-up grid__cell">
            <div class="port_wrapper">
              <div class="port_piece">
                <a href="<%= piece.link %>" class="port_link">
                  <img src="/images/<%= piece.thumb %>" class="port_thumb" />
                </a>
              </div>
              <p class="port_label"><%= piece.label %></p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="push" style="height: 15px;"></div>

      <div class="subtitle-aside-wrapper">
        <p class="subtitle-aside">For a more indepth look at my graphic design skills, Checkout my Art & Design portfolio here: <a href="./artwork.html">ARTWORK.html</a></p>
      </div>
      <div class="push"></div>

    </div>
  </section>
<% end %>
